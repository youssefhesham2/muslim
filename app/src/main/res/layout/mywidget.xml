<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/themm"
        android:layout_alignParentRight="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="20dp">
        <ProgressBar
            android:id="@+id/progress_bar2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="false"
            android:progress="0"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progressDrawable="@drawable/circle_progressbar"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nextsala2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text=""
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/oclock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1DFFB7"
                android:text="4:49:00:AM"
                android:gravity="center"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/timeleft2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:text=""
                android:gravity="center"
                android:textSize="20sp"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/Liner_sala"
        android:layout_below="@+id/themm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fajr"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fajr"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/dhour"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Dhour"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/asr"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Asr"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/maghrib"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Maghrib"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/Aish"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Aish"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/Liner_time"
        android:layout_below="@+id/Liner_sala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/fajr_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5:2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/dhour_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="fajj"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/asr_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="fajj"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/maghrib_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="fajj"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/aish_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="fajj"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#fff"/>

    </LinearLayout>
</RelativeLayout>